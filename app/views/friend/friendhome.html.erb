<h2>Freundesliste</h2>

<% unless @newfriends.first.nil? %>

	<h4>Neue Freundschaftsanfragen</h4>

	<table class="table-class">

		<% @newfriends.each do |nf| %>
		<tr>
			<td>
				<%=  nf.firstname %>
			</td>
			<td>
				<%=  nf.lastname %>
			</td>
			<td>
			<p><%= link_to "accept", friendaccept_path(:friend_id=>nf.id) %> 
				<%= link_to "denie", frienddenie_path(:friend_id=>nf.id) %> </p> 
			</td>
		</tr>
			
		<% end %>

	</table>
	<p></p>
<% end %>	

	<hr>
	<h4>Meine Freunde</h4>

	<table class="table_class">

		<% @friends.each do |f| %>
		<tr>
			<td>
				<b><%=  link_to "#{f.firstname} #{f.lastname}", friendprofile_path(:key=>f.id) %></b>
			</td>
			<td>
				<%= link_to "delete friend", frienddelete_path(:friend_id=>f.id) %>
			</td>
		</tr>
			
		<% end %>


</table>
