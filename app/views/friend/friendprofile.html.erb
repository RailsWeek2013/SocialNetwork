<h2> Profil von <%= @friend.firstname %> </h2>

<img src="<%= @friend.avatar.url %>">
<br>

<b><%= @friend.firstname %> <%= @friend.lastname %></b>
<p>
Geburtstag: <p><b><%= @friend.birthday %></b>

<p><%= link_to "private Nachricht schreiben", new_user_message_path(@friend) %> </p> 

<hr>
<h4> Pinnwand </h4>
		<%= form_tag("/friendnewpin", method: "get") do %>
			<%= label_tag(:msg, "Hinterlasse einen Eintrag:") %><p>
			<%= text_field_tag(:msg) %><p>
			<%= hidden_field_tag 'friend_id', @friend.id %>
			<%= submit_tag ("Beitrag erstellen") %>
		<% end %>
<hr>

<%= render partial: 'user/pinboard' , locals: {isowner: false} %>	
